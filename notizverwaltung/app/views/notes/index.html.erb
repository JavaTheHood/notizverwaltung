<h1>Notes#index</h1>
<p>Find me in app/views/notes/index.html.erb</p>

<table>
	<tr>
    	<th>id</th>
    	<th>Notiz</th>
  	</tr>
 	<% @notes.to_a.each do |note| %>
 	<tr>
		<td><%= note.id %></td>
		<td><%= note.message %></td>

		<td><%= button_to "löschen", note_path(note), :id => "", :class => "inbox-sf-add-btn tip", method: :delete, data: { confirm: 'wirklich löschen?' } %></td>
		<td><%= button_to "bearbeiten", edit_note_path(note), :id => "", :class => "inbox-sf-add-btn tip", method: :get %></td>
	</tr>
	<% end %>
</table>
<%= button_to "Neue Notiz", new_note_path, :class => "inbox-sf-add-btn tip", :method => :get %>
<%= button_to "Json Export", '/notes.json', :class => "inbox-sf-add-btn tip", :method => :get %>