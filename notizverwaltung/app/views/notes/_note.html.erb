<tr>
	<td><%= note.id %></td>
	<td><%= note.message %></td>
	<td><small>erstellt von 
	<%= if note.hasOwner?
	 	link_to note.user.email, user_path(note.user)
	 else
	 	"Gast"
	 end %></small></td>
	<% if user_signed_in? %>
	<td><%= button_to "löschen", note_path(note), :id => "", :class => "inbox-sf-add-btn tip", method: :delete, data: { confirm: 'wirklich löschen?' } %></td>
	<td><%= button_to "bearbeiten", edit_note_path(note), :class => "inbox-sf-add-btn tip", method: :get %></td>
	<% else %>
	<td>Bitte melde dich an um Posts bearbeiten oder löschen zu können</td>
	<% end %>
</tr>