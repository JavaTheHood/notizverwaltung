<tr>
	<td><%= note.id %></td>
	<td><%= note.message %></td>
	<td>
	<%= if note.hasOwner?
	 	link_to note.user.email, user_path(note.user), class: "btn btn-primary btn-lg"
	 else
	 	"Gast"
	 end %></td>
	<% if user_signed_in? %>
	<td><%= button_to "löschen", note_path(note), method: :delete, data: { confirm: 'wirklich löschen?' } %></td>
	<td><%= button_to "bearbeiten", edit_note_path(note), method: :get %></td>
	<% else %>
	<td>Bitte melde dich an um Posts bearbeiten oder löschen zu können</td>
	<% end %>
</tr>