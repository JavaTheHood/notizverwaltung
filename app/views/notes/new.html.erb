<%= form_for :note, url: notes_path do |f| %>
	<div class="form-group">
		<%= f.text_field :heading, class: "form-control", :placeholder => t('placeholder_note_heading')%>
   		<%= f.text_area :message, class: "form-control", rows:"15", :placeholder => t('placeholder_note_message')%>
      <%= f.label t('placeholder_due_at') %>
   		<%= f.date_field :due_at,  class: "form-control"%>
   		<!--%= f.label t.('sign_note_to') %-->
      <%= f.label "Zuweisen an" %>
   		<%= f.collection_select :signed_to, User.all, :id, :email %>
      <%= f.label "Status" %>
   		<%= f.collection_select :status, Status.all, :id, :name %>
      <%= f.collection_select :category, Category.all, :id, :name %>
      <%= link_to "Neue Kategorie", new_category_path %>
    	<%= f.submit t('submit'), :class => "btn btn-default btn-sm" %>

    	<%= button_to "ZurÃ¼ck", notes_path, :class => "btn btn-default btn-sm inbox-sf-add-btn tip", :method => :get %>      
  	</div>
<% end %>

