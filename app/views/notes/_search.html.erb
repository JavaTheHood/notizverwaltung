<p>
	<%= form_tag :controller => 'notes', :action => 'search', :method => 'get', :class=>"form-inline" do %>
		<%= text_field_tag :search, params[:search], :id => 'search_field' %>
		<%= submit_tag t("notes_search_search_button"), :name => nil, :class => "btn btn-default btn-sm" %>
		<%= link_to_function t("notes_search_clearinput"), "$('search_field').clear()", :class => "btn btn-default btn-sm" %>
	<% end %>
</p>