<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#commentModal<%= note.id %>">
  Kommentieren
</button>

<!-- Modal -->
<div class="modal fade" id="commentModal<%= note.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Kommentar verfassen</h4>
      </div>
      <div class="modal-body">
        <!--div class="form-group"-->
          <%= form_for [note, Comment.new] do |f| %>
          <%= f.text_field :heading, :placeholder => t('placeholder_note_heading')%>
          <%= f.text_area :body, :placeholder => t('placeholder_note_message') %>
          <%= f.submit t('submit') %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <% end %>
        <!--/div-->
      </div>
      <div class="modal-footer">
      </div>   
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->